<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-neutral-900">Sign up</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-neutral-50 px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mt-4">
          <%= f.label :name, class: "block text-sm font-medium leading-6 text-neutral-900" %>
          <div class="mt-2">
            <%= f.text_field :name, autofocus: true, placeholder: 'Full name', class: 'block w-full rounded-md border-0 bg-primary/5 py-1.5 shadow-sm ring-1 ring-inset ring-primary/10 focus:ring-2 focus:ring-inset focus:ring-primary-500 sm:text-sm sm:leading-6' %>
          </div>
        </div>
        <div class="mt-4">
          <%= f.label :email, class: "block text-sm font-medium leading-6 text-neutral-900" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'block w-full rounded-md border-0 bg-primary/5 py-1.5 shadow-sm ring-1 ring-inset ring-primary/10 focus:ring-2 focus:ring-inset focus:ring-primary-500 sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="mt-4">
          <%= f.label :password, class: "block text-sm font-medium leading-6 text-neutral-900" %>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'block w-full rounded-md border-0 bg-primary/5 py-1.5 shadow-sm ring-1 ring-inset ring-primary/10 focus:ring-2 focus:ring-inset focus:ring-primary-500 sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="mt-4">
          <%= f.label :password_confirmation, class: "block text-sm font-medium leading-6 text-neutral-900" %>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password', class: 'block w-full rounded-md border-0 bg-primary/5 py-1.5 shadow-sm ring-1 ring-inset ring-primary/10 focus:ring-2 focus:ring-inset focus:ring-primary-500 sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="mt-4">
          <%= f.submit "Sign up", class: "btn btn-primary btn-wide mx-auto block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>