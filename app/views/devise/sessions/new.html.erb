<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-neutral-900">Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-neutral-50 px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
        <div class="mt-4">
          <%= f.label :email, class: "block text-sm font-medium leading-6 text-neutral-900" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'block w-full rounded-md border-0 bg-primary/5 py-1.5 text-neutral shadow-sm ring-1 ring-inset ring-primary/10 focus:ring-2 focus:ring-inset focus:ring-primary-500 sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="mt-4">
          <%= f.label :password, class: "block text-sm font-medium leading-6 text-neutral-900" %>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'block w-full rounded-md border-0 bg-primary/5 py-1.5 text-neutral shadow-sm ring-1 ring-inset ring-primary/10 focus:ring-2 focus:ring-inset focus:ring-primary-500 sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="flex items-center justify-between mt-4">
          <% if devise_mapping.rememberable? -%>
            <div class="flex items-center">
              <label class="ml-3 block text-sm leading-6 text-neutral-900">
                <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-neutral-300 text-neutral-600 focus:ring-primary-600" %>
                Remember me
              </label>
            </div>
          <% end -%>
            
          <%- if devise_mapping.recoverable? %>
            <div class="text-sm leading-6">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'font-semibold text-neutral-600 hover:text-neutral-500' %><br />
            </div>
          <% end %>
        </div>

        <div class="mt-4">
          <%= f.submit "Log in", class: "btn btn-primary btn-wide mx-auto block" %>
        </div>
      <% end %>
    </div>
    
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <p class="mt-10 text-center text-sm text-neutral-500">
        Not a member?
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'font-semibold leading-6 text-neutral-600 hover:text-neutral-500' %><br />
      </p>
    <% end %>
  </div>
</div>